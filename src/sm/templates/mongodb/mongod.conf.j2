# MongoDB 7.0 Configuration
# Generated by sm mongodb setup
# Production-ready standalone configuration

storage:
  dbPath: {{ data_dir | default('/var/lib/mongodb') }}
  directoryPerDB: true
  engine: wiredTiger
  wiredTiger:
    engineConfig:
      cacheSizeGB: {{ cache_size_gb | default(1) }}
      journalCompressor: snappy
    collectionConfig:
      blockCompressor: snappy
    indexConfig:
      prefixCompression: true

systemLog:
  destination: file
  path: /var/log/mongodb/mongod.log
  logAppend: true
  logRotate: reopen
  timeStampFormat: iso8601-utc
  verbosity: 0

net:
  port: {{ port | default(27017) }}
  bindIp: {{ bind_ip | default('127.0.0.1') }}
  maxIncomingConnections: {{ max_connections | default(1000) }}
  ipv6: false

security:
  authorization: {{ 'enabled' if auth_enabled | default(true) else 'disabled' }}

processManagement:
  fork: false
  pidFilePath: /var/run/mongodb/mongod.pid
  timeZoneInfo: /usr/share/zoneinfo

setParameter:
  authenticationMechanisms: SCRAM-SHA-256

operationProfiling:
  mode: {{ profiling_mode | default('off') }}
  slowOpThresholdMs: {{ slow_op_threshold_ms | default(100) }}
